package projekat1;

import java.util.ArrayList;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        /*
        Napisati program koji u listi brojeva pronalazi:
        a) sve parne i neparne brojeve
        b) sve pozitivne i negativne brojeve
        c) sve proste brojeve

        Primjer ispisa:

        Parni brojevi: 2 4 8 12
        Neparni brojevi: 1 3 5 7 9
        Pozitivni: 1 2 3 4 5 6
        Negativni: -1 -2
        Prosti brojevi: 2 3 5 7 11 13 17 19
        */

        Scanner s = new Scanner(System.in);
        System.out.println("Array Length: ");
        int n = s.nextInt();

        int[] array = new int[n];

        ArrayList<Integer> posNums = new ArrayList<>();
        ArrayList<Integer> negNums = new ArrayList<>();
        ArrayList<Integer> evenNums = new ArrayList<>();
        ArrayList<Integer> oddNums = new ArrayList<>();
        ArrayList<Integer> prostBroj = new ArrayList<>();


        for (int i=0; i< array.length; i++){
            array[i] = s.nextInt();}

        for (int j : array) {
            if (j > 0) posNums.add(j);
            if (j < 0) negNums.add(j);
            if (j % 2 == 0 && j > 0) evenNums.add(j);
            if (j % 2 != 0 && j > 0) oddNums.add(j);
            if (daLiJeProstBroj(j)) {
                prostBroj.add(j);
            }
        }

        System.out.println("Positive numbers: "+posNums.toString());
        System.out.println("Negative numbers: "+negNums.toString());
        System.out.println("Even numbers: "+evenNums.toString());
        System.out.println("Odd numbers: "+oddNums.toString());
        System.out.println("Prosti brojevi: "+prostBroj.toString());
}

    private static boolean daLiJeProstBroj(int $i) {
        if ($i == 2) return true;
        if ($i % 2 != 0 && $i>1) return true;
        return false;
}
}




